<html>
    <head>
        <title>Places you have been</title>
    </head>
    <body>
        <h1>Places you have been</h1>
        {% if places is not empty %}
            <p>Here are all your places:</p>
            <ul>
                {% for place in places %}
                    <li>{{ place.getLocation }}</li>
                    <ul>
                        <li><img src={{ place.getPhoto }}></li>
                    </ul>
                {% endfor %}
            </ul>
        {% endif %}

        <form action='/places' method='post'>
            <label for='location'>Location</label>
            <input id='location' name='location' type='text'>

            <label for='photo'>Photo</label>
            <input id='photo' name='photo' type='text'>

            <button type='submit'>Add Place</button>
        </form>
        <form action='/delete_places' method='post'>
            <button type='submit'>Clear</button>
        </form>

    </body>
</html>
